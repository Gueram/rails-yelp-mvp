<h1>All the restaurants</h1>

<%= link_to "Add a restaurant", new_restaurant_path %>

<% @restaurants.each do |restaurant| %>
  <h3>Name: <%= restaurant.name %></h3>
  <p>Address: <%= restaurant.address %> </p>
  <p>Phone number: <%= restaurant.phone_number %> </p>
  <p>Category: <%= restaurant.category %> </p>
  <% unless restaurant.reviews == [] %>
    <p>Review: <%= restaurant.reviews.last.content %> </p>
  <% end %>
  <p><%= link_to "To restaurant page", restaurant_path(restaurant) %></p>
  <p><%= link_to "Add a review", new_restaurant_review_path(restaurant) %></p>
<% end %>
